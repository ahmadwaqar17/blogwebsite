@model Bloggie.Models.BlogPost

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('https://images.pexels.com/photos/267569/pexels-photo-267569.jpeg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            color: white; /* Change text color to improve readability on the background */
        }

        .container {
            background-color: rgba(0, 0, 0, 0.5); /* Black overlay with 50% transparency */
            padding: 20px;
            border-radius: 8px;
        }

        .img-fluid {
            opacity: 0.7; /* Adjust this value to control image transparency */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@Model.Title</h2>
        <p>@Model.Content</p>
        <p><strong>Category:</strong> @Model.Category.Name</p>
        <p><img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid"></p>
    </div>
</body>
</html>
