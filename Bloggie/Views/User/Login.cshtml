@model Bloggie.Models.User

@{
    ViewData["Title"] = "Login";
    // Do not use a layout file for this specific page
    Layout = null;
}

<!-- Include Tailwind CSS if not already included -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0/dist/tailwind.min.css" rel="stylesheet">

<!-- Navigation Bar -->
<nav class="bg-gray-800 p-4 md:p-6 lg:p-8">
    <div class="container mx-auto flex justify-between items-center">
        <div class="text-white text-lg font-semibold md:text-xl lg:text-2xl">
            <a href="@Url.Action("Login", "User")" class="hover:underline">Login</a>
        </div>
        <div class="text-white text-lg font-semibold md:text-xl lg:text-2xl">
            <a href="@Url.Action("Register", "User")" class="hover:underline">Register</a>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md p-4 md:p-6 lg:p-8 bg-white shadow-md rounded md:rounded-lg lg:rounded-xl">
        <h2 class="text-2xl font-bold text-center mb-6 md:text-3xl lg:text-4xl">Login</h2>
        <form asp-action="Login" method="post">
            <div class="mb-4 md:mb-6 lg:mb-8">
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 md:text-base lg:text-lg"></label>
                <input asp-for="Username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm md:text-base lg:text-lg" />
                <span asp-validation-for="Username" class="text-red-500 text-sm md:text-base lg:text-lg"></span>
            </div>
            <div class="mb-6 md:mb-8 lg:mb-10">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 md:text-base lg:text-lg"></label>
                <input asp-for="Password" type="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm md:text-base lg:text-lg" />
                <span asp-validation-for="Password" class="text-red-500 text-sm md:text-base lg:text-lg"></span>
            </div>
            <button type="submit" class="w-full px-4 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 md:px-6 md:py-3 lg:px-8 lg:py-4">Login</button>
        </form>
    </div>
</div>