@model IEnumerable<Bloggie.Models.BlogPost>

@{
    ViewData["Title"] = "Blog Posts";
}

<h2>Blog Posts</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Category.Name</td>
                <td>@post.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@post.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@post.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@post.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New</a>
