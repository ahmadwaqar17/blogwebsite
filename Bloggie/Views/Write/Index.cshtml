@model IEnumerable<Bloggie.Models.BlogPost>

@{
    ViewData["Title"] = "Blog Posts";
}

<h1>Blog Posts</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Category.Name</td>
                <td>@item.CreatedAt.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
